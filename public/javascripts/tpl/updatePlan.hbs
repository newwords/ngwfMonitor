<div class="layui-container">
  <div class="layui-row">
    <h1>更新计划时间及进度</h1>
  </div>
  <div class="layui-row">
    <div class="layui-form-item layui-row">
      <label class="layui-form-label">开始时间</label>
      <div class="layui-input-inline">
        <input type="text" name="password" lay-verify="date" placeholder="请输入开始时间" autocomplete="off" class="layui-input">
      </div>
    </div>
  </div>
  <div class="layui-row">
    <div class="layui-form-item layui-row">
      <label class="layui-form-label">结束时间</label>
      <div class="layui-input-inline">
        <input type="text" name="password" lay-verify="date" placeholder="请输入结束时间" autocomplete="off" class="layui-input">
      </div>
    </div>
  </div>
  <div class="layui-row">
    <div class="layui-form-item layui-row">
      <label class="layui-form-label">进度</label>
      <div class="layui-input-inline">
        <input type="text" name="password" lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input">
      </div>
    </div>
  </div>
  <div class="layui-row">
    <button class="layui-btn layui-btn-primary">提交</button>
    <button class="layui-btn layui-btn-normal">取消</button>
  </div>
</div>