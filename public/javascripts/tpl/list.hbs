<div class="total">
    <div class="progress">
        <h3>项目实施总体进度<a id="exportProblem"
                       style="  cursor: pointer;float: right;margin-right:40px;color:#ff9700">问题导出</a></h3>
        <progress value="{{total}}" max="100"></progress>
    </div>
    <div class="num">
        <p>{{total}}%</p>
    </div>
</div>
<div class="citys">
    {{#each citys}}
        <div class="city">
            <div class="overview">
                <div class="left">
                    <ul class="describe">
                        <li>{{name}}</li>
                        <li>
                            {{#stateIcon rate}}
                                <span class="dui-span">  <i class="iconfont icon-duigou"></i></span> {{else}}
                                <span class="dui-span no-begin"> <i
                                        class="iconfont icon-duigou no-begin"></i></span> {{/stateIcon}}
                            <span class="state">{{state}}</span>
                        </li>
                        <li>计划时间: {{bgnTime}} - {{endTime}}</li>
                        <li>{{duty}}</li>
                        <li>{{monitor}}</li>
                    </ul>
                    <div class="city-progress">
                        <progress value="{{rate}}" max="100"></progress>
                    </div>
                </div>
                <p class="medium">{{rate}}%</p>
                <div class="right">
                    <span class="span_detail span_control">详情<i class="iconfont icon-down_arrow"></i></span>
                    <span class="span_warn span_control">告警
                        <span class="warn-a"><a href="javascript:void 0">{{warnSum this.phases}}</a></span>
            <i class="iconfont icon-down_arrow"></i>
            </span>
                    <span class="span_problem span_control">问题
                        <span class="problem-a"><a href="javascript:void 0">{{problemSum this.problems}}</a></span>
            <i class="iconfont icon-down_arrow"></i>
            </span>
                </div>
            </div>
            <div class="detail" style="display: none;">
                <h3>实施详情</h3>
                <ul class="title">
                    <li class="phase">实施阶段</li>
                    <li class="progress">进度</li>
                    <li class="person">责任人</li>
                    <li class="time">计划开始时间</li>
                    <li class="time">计划结束时间</li>
                    <li class="isUpdate">当天更新</li>
                </ul>
                {{#each phases}}
                    <ul>
                        {{{ident this}}}
                        <li class="progress">
                            <progress value="{{progress}}" max="100"></progress> {{progress}}%
                        </li>
                        <li class="person" title="{{{responsiblePerson}}}">{{{responsiblePerson}}}</li>
                        <li class="time">{{plannedStartTime}}{{{actualStartTime this}}}</li>
                        <li class="time">{{plannedEndTime}}{{{actualEndTime this}}}</li>
                        <li class="isUpdate">{{#update this}}
                            <span class="update active" title="{{updatedAt}}"></span> {{else}}
                            <span class="update"></span> {{/update}}</li>
                    </ul>
                {{/each}}
            </div>
            <div class="warn" style="display: none;">
                <ul class="title">
                    <li class="phase">实施阶段</li>
                    <li class="message">告警信息</li>
                </ul>
                {{#each phases}}
                    {{#if warn}}
                        <ul>
                            <li class="phase" title="{{step}}">{{step}}</li>
                            {{#each warn.detail}}
                                <li class="message" title="{{message}}">{{message}}</li>
                            {{/each}}
                        </ul>
                    {{/if}}
                {{/each}}
            </div>
            <div class="problem" style="display: none;">
                <ul class="title">
                    <!--<li class="phase">实施阶段</li>-->
                    <!--<li class="person">提出人</li>-->
                    <!--<li class="time">创建时间</li>-->
                    <!--<li class="time">期望解决时间</li>-->
                    <!--<li class="solver">期望解决人</li>-->
                    <!--<li class="describe">问题描述</li>-->
                    <!--<li class="state">状态</li>-->

                    <li class="phase">问题归属</li>
                    <li class="phase">提出人</li>
                    <li class="phase">期望解决时间</li>
                    <li class="describe">问题描述</li>
                    <li class="describe">解决方案</li>
                    <li class="time">进展</li>
                    <li class="state">状态</li>
                </ul>
                {{#each problems}}
                    <ul>
                        <li class="phase">&nbsp;{{proposes}}&nbsp;</li>
                        <li class="phase">&nbsp;{{questioner}}&nbsp;</li>
                        <li class="phase">&nbsp;{{expectedResolutionDate}}&nbsp;</li>
                        <li class="describe" title="{{describe}}">{{describe}}&nbsp;
                        </li>
                        <li class="describe" title="{{solution}}">&nbsp;{{solution}}&nbsp;</li>
                        <li class="time" title="{{progressAndResults}}">&nbsp;{{progressAndResults}}&nbsp;</li>
                        <li class="state" title="{{state}}">{{state}}</li>
                    </ul>
                {{/each}}
            </div>
        </div>
    {{/each}}
</div>